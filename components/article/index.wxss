.articles {
}
.article {
	position:relative;
	padding-left:135rpx;
	padding-top:30rpx;
	padding-right:30rpx;
	padding-bottom:30rpx;
	border-bottom:1rpx solid #E6E6E6;
}
.article .avatar {
	position:absolute;
	top:30rpx;
	left:30rpx;
	width:80rpx;
	height:80rpx;
	border-radius:5rpx;
	overflow:hidden;
}
.article .partner {
	position:absolute;
	top:10rpx;
	left:90rpx;
	width:32rpx;
	height:32rpx;
	overflow:hidden;
}
.article .avatar image {
	width:80rpx;
	height:80rpx;
}
.article .price {
	position:absolute;
	top:35rpx;
	right:30rpx;
	font-size:30rpx;
	color:#FF0041;
}
.article .nickname {
	height:35rpx;
	margin-bottom:20rpx;
	font-size:26rpx;
	line-height:35rpx;
	color:black;
}
.article .nickname .time {
	height:35rpx;
	font-size:24rpx;
	line-height:35rpx;
	color:black;
	color:#989898;
}
.article .attr {
	/* height:35rpx; */
	margin-top:15rpx;
	font-size:24rpx;
	line-height:35rpx;
	color:#989898;
}
.article .attr .authorization {
	color:#ff5555;
	text-decoration: underline;
	display:inline-block;
}
.article .content {
	margin-bottom:15rpx;
	font-size:28rpx;
	color:black;
	line-height:40rpx;
}
.article .content .promotion {
	display:inline-block;
	text-align:center;
	height:28rpx;
	line-height:26rpx;
	color:white;
	background-color:#fed406;
	border:1rpx solid #fed406;
	font-size:20rpx;
	padding-right:5rpx;
	padding-left:5rpx;
	border-radius:5rpx;
	vertical-align:text-top;
}
.article .images {
	display:flex;
	justify-content: flex-start;
	margin-bottom:25rpx;
}
.article .images .image {
	overflow:hidden;
}
.article .images .image image {
	width:100%;
}
.article .images .image-multi {
	height:182rpx;
	width:182rpx;
	overflow:hidden;
}
.article .images .image-double {
	height:182rpx;
	width:182rpx;
	overflow:hidden;
}
.article .images .image-single {
	/* height:182rpx; */
	/* height:81rpx; */
	/* max-height:900rpx; */
	max-width:384rpx;
	max-height:768rpx;
}
.article .images .image  + .image {
	margin-left:10rpx;
}
.article .status {
	height:26rpx;
	font-size:26rpx;
	color:#989898;
}