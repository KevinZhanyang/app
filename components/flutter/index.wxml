<view class="free-WaterfallFlow">
    <block>
        <view class="flex-wrap" wx:for="{{ articles }}" wx:for-index="recentId" wx:for-item="article" wx:key="id" wx:if="{{item.id%2!=''}}">
            <navigator url="{{ '/pages/article/item?id=' + article.id }}" hover-class="navigator-hover">
                <image class="pic" lazy-load="{{true}}" mode="widthFix" src="{{article.imgs[0].img}}"></image>
                <view class="containner">
                    <view class="ellipsis ">{{ article.content}}</view>
                    <view class="head-containner">
                        <navigator url="/pages/published/index?user_id={{ article.user_id }}" hover-class="navigator-hover">
                            <div class="head-flex">
                                <image mode="widthFix" lazy-load="{{true}}" class="head-image" src="{{ article.avatar }}"></image>
                                <view class="head-box">
                                    <view class="nickname">{{ article.nickname }}</view>
                                    <view class="price">$ {{ article.price }}</view>
                                </view>
                            </div>
                        </navigator>
                    </view>
                </view>
            </navigator>
        </view>
    </block>
