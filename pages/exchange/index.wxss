/* sp */
page {
	background-color:#F7F5F4;
}
/* sp */
.rainbow {
	width:100%;
}
.rainbow image {
	width:100%;
}
/* sp */
.products {
	padding-top:30rpx;
}
.products .product {
	display:flex;
	justify-content:space-between;
	padding:50rpx;
	margin-right:30rpx;
	margin-left:30rpx;
	padding-top:40rpx;
	padding-bottom:40rpx;
	padding-right:30rpx;
	padding-left:30rpx;
	border-radius:20rpx;
	background-color:white;
}
.products .product + .product {
	margin-top:15rpx;
}
.products .product .img {
	width:220rpx;
	height:220rpx;
	margin-right:60rpx;
	border-radius:8rpx;
	overflow:hidden;
}
.products .product .img image {
	width:220rpx;
	height:220rpx;
}
.products .product .content {
	flex-grow:1;
}
.products .product .content .name {
	height:60rpx;
	font-size:40rpx;
	line-height:60rpx;
	color:#2F2F2F;
}
.products .product .content .price {
	height:70rpx;
	padding-left:70rpx;
	font-size:30rpx;
	line-height:70rpx;
	color:#FD1605;
	background-image: url(http://static.124115.com/static/program/img/exchange/bucket.png);
	background-repeat:no-repeat;
	background-position:left center;
	background-size:52rpx 52rpx;
}
.products .product .content .price text {
	color:#FF0053;
}
.products .product .content .exchange {
	height:90rpx;
	display:flex;
	justify-content:space-between;
}
.products .product .content .exchange .limit {
	font-size:28rpx;
	line-height:70rpx;
	color:#2b2b2b;
}
.products .product .content .exchange .navigator {
	width:190rpx;
	height:70rpx;
	background-color:#FFD700;
	color:white;
	font-size:35rpx;
	line-height:70rpx;
	border-radius:32rpx;
	text-align:center;
}
.products .product .content .exchange ._navigator {
	width:190rpx;
	height:70rpx;
	background-color:#EEE;
	color:#666;
	font-size:35rpx;
	line-height:70rpx;
	border-radius:32rpx;
	text-align:center;
	border:1px solid #665A2E;
}
/* red-packet start */
.red-packet {
	width:750rpx;
	height:199rpx;
}
.red-packet image {
	width:100%;
	height:100%;
}
/* red-packet end */
/* EXPLAIN START */
.explain {
	padding:40rpx 30rpx;
	border-radius:15rpx;
	margin-right:30rpx;
	margin-left:30rpx;
	margin-top:15rpx;
	margin-bottom:15rpx;
	background-color:white;
}
.explain .title {
	height:40rpx;
	margin-bottom:30rpx;
	line-height:40rpx;
	color:#EEC300;
}
.explain .content {
	min-height:50rpx;
	line-height:50rpx;
	font-size:30rpx;
	color:black;
}
/* EXPLAIN END */
/* DECLARATION START */
.declaration {
	height:70rpx;
	text-align:center;
	font-size:26rpx;
	line-height:70rpx;
	color:#999;
}
