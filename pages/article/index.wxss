/* SEARCH START */
.search {
	z-index:10;
	position:fixed;
	top:0rpx;
	left:0rpx;
	right:0rpx;
	height:100rpx;
	padding-top:15rpx;
	padding-bottom:15rpx;
	padding-left:15rpx;
	padding-right:15rpx;
	background-color:#fed406;
}
.search .keyword {
	text-align:center;
	height:70rpx;
	line-height:70rpx;
	padding-left:15rpx;
	padding-right:15rpx;
	border-radius:35rpx;
	font-size:26rpx;
	background-color:#F5F5F5;
	color:#2b2b2b;

	background-image:url(data:image/png;base64,);
	background-repeat:no-repeat;
	backgorund-position:70rpx center;
	background-size:70rpx 70rpx;
}
/* SEARCH END */
/* hotkeywords */
.hot-title {
	height:80rpx;
	font-size:30rpx;
	line-height:80rpx;
	color:#2b2b2b;
}
.hotkeywords {
	display:flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: flex-start;
	overflow:hidden;
}
.hotkeywords .hotkeyword {
	padding:8rpx 15rpx;
	margin-left:0rpx;
	margin-top:0rpx;
	margin-right:30rpx;
	margin-bottom:35rpx;
	font-size:30rpx;
	line-height:30rpx;
	border:1px solid #fed406;
	border-radius:8rpx;
	color:#666;
}
/* KEYWORDS END */
/* ARTICLES ARTICLE */
._article {
}
._article .empty {
	padding-top:80rpx;
	padding-bottom:80rpx;
	height:300rpx;
	font-size:24rpx;
	color:#E2E2E2;
	text-align:center;
}
._article .empty image {
	width:80rpx;
	height:80rpx;
}
/* ARTICLES END */
/* options */
._options {
	z-index:10;
	position:fixed;
	top:100rpx;
	left:0rpx;
	right:0rpx;
	/* height:90rpx; */
	border-bottom:1rpx solid #EEE;
}
.options {
	position:relative;
	display:flex;
	justify-content: space-around;
	background-color:white;
}
.options .activity {
	color:#ff5555;
}
.options .activity label {
	border-bottom:10rpx solid #E2E2E2;
	border-top:10rpx solid transparent;
}
.options .option {
	text-align:center;
	height:90rpx;
	padding-top:27rpx;
	padding-bottom:27rpx;
	color:535353;
	font-size:28rpx;
}
.options .option label {
	display:inline-block;
	border-left:10rpx solid transparent;
	border-right:10rpx solid transparent;
	border-bottom:10rpx solid transparent;
	border-top:10rpx solid #E2E2E2;
	margin-left:8rpx;
}
.options .content {
	position:absolute;
	left:0rpx;
	right:0rpx;
	top:90rpx;
	background-color:white;
	z-index:10;
	width:100%;
	height:600rpx;
	border-bottom:5rpx solid black;
}
.options .content .item {
	height:101rpx;
	padding-top:27rpx;
	padding-bottom:27rpx;
	margin-right:60rpx;
	margin-left:60rpx;
	border-top:1prx solid #EEE;
	font-size:26rpx; /* 36rpx */
	color:535353;
	font-size:26rpx;
	border-bottom:1px solid #EEE;
}
