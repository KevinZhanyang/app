.messages {
}
.message {
	position:relative;
	padding-top:20rpx;
	padding-right:25rpx;
	padding-bottom:20rpx;
	padding-left:205rpx;
	margin-bottom:4rpx;
	background-color:white;
}
.message .img {
	position:absolute;
	left:25rpx;
	top:20rpx;
	width:160rpx;
	height:160rpx;
	border-radius:8rpx;
	overflow:hidden;
}
.message .img image {
	width:100%;
	height:100%;
}
.message .primary {
	display:flex;
	justify-content:space-between;
}
.message .primary .avatar {
	vertical-align:middle;
	width:40rpx;
	height:40rpx;
}
.message .primary .name {
	font-size:24rpx;
	line-height:60rpx;
	color:black;
}
.message .primary .read {
	padding-left:5rpx;
	padding-right:5rpx;
	color:white;
	background-color:#fed406;
}
.message .primary .created_at {
	font-size:20rpx;
	line-height:60rpx;
	color:#838383;
}
.message .content {
	height:100rpx;
	font-size:28rpx;
	line-height:50rpx;
	color:#838383;
}