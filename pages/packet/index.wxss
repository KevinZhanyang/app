/* packet */
.information {
	position:relative;
	padding-top:68rpx;
	margin-bottom:50rpx;
	background-image:url(http://static.124115.com/static/program/img/packet/background.png);
	background-repeat:no-repeat;
	background-size: 100% auto;
	background-position:top center;
}
.information ._avatar {
	text-align:center;
	margin-bottom:24rpx;
}
.information .avatar {
	width:120rpx;
	height:120rpx;
	overflow:hidden;
	display:inline-block;
	border-radius:8rpx;
}
.information .nickname {
	text-align:center;
	margin-bottom:24rpx;
}
.information .greeting {
	text-align:center;
	margin-bottom:24rpx;
}
.information .score {
	height:70rpx;
	font-size:60rpx;
	font-weight:bold;
	text-align:center;
}
/* score */
/* exchange */
._exchange {
	padding-bottom:17rpx;
}
.exchange {
	height:168rpx;
	width:100%;
}
.exchange image {
	height:168rpx;
	width:100%;
}
/* packet */
.packet-title {
	height:80rpx;
	line-height:80rpx;
	padding-left:30rpx;
	padding-right:30rpx;
	font-size:25rpx;
	background-color:white;
	color:#757575;
}
.packets {
	background-color:white;
}
.packet {
	position:relative;
	padding-left:135rpx;
	padding-top:30rpx;
	padding-right:30rpx;
	padding-bottom:30rpx;
	border-top:1rpx solid #E6E6E6;
}
.packet .avatar {
	position:absolute;
	top:30rpx;
	left:30rpx;
	width:80rpx;
	height:80rpx;
	border-radius:5rpx;
	overflow:hidden;
}
.packet .avatar image {
	width:80rpx;
	height:80rpx;
}
.packet .score {
	position:absolute;
	top:30rpx;
	right:30rpx;
	height:80rpx;
	font-size:30rpx;
	color:#2b2b2b;
	line-height:80rpx;
}
.packet .nickname {
	height:35rpx;
	margin-bottom:10rpx;
	font-size:26rpx;
	line-height:35rpx;
	color:black;
}
.packet .section {
	height:35rpx;
	margin-bottom:10rpx;
	font-size:24rpx;
	line-height:35rpx;
	color:#989898;
}