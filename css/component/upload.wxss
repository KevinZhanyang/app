/* upload */
.upload {
	padding-top:15rpx;
	padding-bottom:15rpx;
	margin-right:-9px;
	margin-bottom:-9px;
}
.upload .files {
}
.upload .files .file {
	position:relative;
	float:left;
	margin-right:9px;
	margin-bottom:9px;
}
.upload .files .file .close {
	position:absolute;
	width:40rpx;
	height:40rpx;
	top:-20rpx;
	right:-20rpx;
}
.upload .files .file .close image {
	width:40rpx;
	height:40rpx;
}
.upload .files .file .img {
	display:block;
	width:79px;
	height:79px;
	background-color:#777;
}
.upload .boxes {
	float:left;
	position:relative;
	margin-right:9px;
	margin-bottom:9px;
	width:77px;
	height:77px;
	border:1px solid #d9d9d9;
}
.upload .boxes .box {
	position:absolute;
	z-index:1;
	top:0;
	left:0;
	width:100%;
	height:100%;
	opacity:0;
}



